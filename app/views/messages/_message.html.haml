.message{"data-id": "#{message.id}"}
  .upper-info
    .upper-info__user
      = message.user.name
    .upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    = message.content if message.content.present?
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
