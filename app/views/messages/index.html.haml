.wrapper
  .chat-side
    .side-header
      %p.side-header__user-name
        name
      %ul.user-menu
        %li.user-menu__edit-user
        = link_to("/groups/new") do
          %i.fa.fa-edit
        %li.user-menu__new-group
        = link_to("/users/edit") do
          %i.fa.fa-cog
    .groups
      %a{ href: '/groups/messages' }
        .group
          %p.group__group-name 
            group name
          %p.group__latest-message
            group messages
  .chat-main
    .main-header 
      .current-group  
        %h2.current-group__name
          group name
        %ul.member-list
          Memberï¼š
          %li.member-list__member
            name
      = link_to root_path do
        .main-header__edit-btn 
          Edit
    .messages
      .message
        .upper-info
          .upper-info__user
          .upper-info__date
        %p.message__text
    .form 
