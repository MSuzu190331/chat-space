.wrapper
  .chat-side
    .side-header
      %p.side-header__user-name
        =current_user.name
      %ul.user-menu
        %li.user-menu__edit-user
        = link_to new_group_path do
          =fa_icon "edit", class: 'icon'
        %li.user-menu__new-group
        = link_to edit_user_path(current_user) do
          =fa_icon "cog", class: 'icon'
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            %p.group__group-name 
              = group.name
            %p.group__latest-message
              メッセージはまだありません。
  .chat-main
    .main-header 
      .current-group  
        %h2.current-group__name
          group name
        %ul.member-list
          Member：
          %li.member-list__member
            name
      = link_to root_path do
        .main-header__edit-btn 
          Edit
    .messages
      .message
        .upper-info
          .upper-info__user
            name
          .upper-info__date
            2019/06/28(Fri) 19:36:29
        %p.message__text
          test
    .form
      = form_for("") do |f|
        .input-box
          = f.text_field "content",class: "message_content input-box__text", placeholder: "type a message"
          = f.label "image", class: "image-label", for: "message_image" do
            =fa_icon "image"
            = f.file_field :upload_file, class: "image-label__input", id: "message_image"
          = f.submit "Send", class: "new-message__submit-btn"

